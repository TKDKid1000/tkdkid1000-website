{
    "compilerOptions": {
        "module": "ES2015",
        "target": "ES2015",
        "rootDir": "./assets",
        "typeRoots": ["./node_modules/@types", "./assets/@types"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": ["./assets/", "./node_modules/@types/"],
    "exclude": ["./node_modules"],
  }