{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES6",
        "rootDir": "./assets",
        "typeRoots": ["./node_modules/@types", "./assets/@types"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": ["./assets", "./node_modules/@types"],
    "exclude": ["./node_modules"],
  }