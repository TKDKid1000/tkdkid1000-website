{
  "compilerOptions": {
      "module": "ES6",
      "target": "ES6",
      "rootDir": "./src",
      "outDir": "./build",
      "typeRoots": ["./node_modules/@types", "./src/@types"],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowJs": true
  },
  "include": ["./src", "./node_modules/@types"],
  "exclude": ["./node_modules"]
}