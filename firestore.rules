rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
      match /posts {
        match /comments {
          match /{postId} {
            match /{commentId} {
              allow read: if true;
              allow create: if request.auth != null;
              allow update, delete: if request.auth.uid == get(/databases/$(database)/documents/comments/$(postId)/$(commentId)).data.author;
            }
          }
        }
      }
    }
  }
}