{% layout 'root.liquid' %}
{% block content %}
<div class="row">
    <div class="col d-flex justify-content-center">
        <div class="card" style="width: 100%;">
            <div class="card-body">
                <ul class="nav nav-tabs" id="tabselector" role="tablist">
                    <li class="nav-item" role="presentation">
                       <button class="nav-link active" id="forums-tab" data-bs-toggle="tab" data-bs-target="#forums" type="button" role="tab" aria-controls="forums" aria-selected="true">Forums</button>
                    </li>
                    <li class="nav-item" role="presentation">
                       <button class="nav-link" id="users-tab" data-bs-toggle="tab" data-bs-target="#users" type="button" role="tab" aria-controls="users" aria-selected="false">Users</button>
                    </li>
                    <li class="nav-item" role="presentation">
                       <button class="nav-link" id="about-tab" data-bs-toggle="tab" data-bs-target="#about" type="button" role="tab" aria-controls="about" aria-selected="false">About</button>
                    </li>
                 </ul>
                <div class="container">
                    <div class="tab-content" id="tab-content">
                       <div class="tab-pane fade show active" id="forums" role="tabpanel" aria-labelledby="forums-tab">
                          <h1>Forums</h1>
                          <ul class="list-group sortable-list" id="sort">
                            {% for category in forums %}
                                <li class="list-group-item" id="forums-category-{{ category[0] }}">
                                    {{ category[0] }}
                                    <ul class="list-group sortable-list">
                                        {% for channel in category[1]["channels"] %}
                                            <li class="list-group-item" id="forums-channel-{{ channel[0] }}">{{ channel[0] }}</li>
                                        {% endfor %}
                                    </ul>
                                </li>
                            {% endfor %}
                          </ul>
                          <button class="btn btn-primary" id="save">Save</button>
                       </div>
                       <div class="tab-pane fade" id="users" role="tabpanel" aria-labelledby="users-tab">
                          <h1>Users</h1>
                       </div>
                       <div class="tab-pane fade" id="about" role="tabpanel" aria-labelledby="about-tab">
                          <h1>About</h1>
                       </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<form id="admin-form" style="display: none;" method="POST">
    <input type="text" id="json-input" name="json-input">
    <input type="text" id="editor-type" name="editor-type">
</form>
<script src="/assets/js/admin.js"></script>
{% endblock %}